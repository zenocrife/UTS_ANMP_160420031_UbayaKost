<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailKostFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="29dp">

        <ProgressBar
            android:id="@+id/progressBarKostDetailImg"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imgKostDetail"
            app:layout_constraintEnd_toEndOf="@+id/imgKostDetail"
            app:layout_constraintStart_toStartOf="@+id/imgKostDetail"
            app:layout_constraintTop_toTopOf="@+id/imgKostDetail" />

        <ImageView
            android:id="@+id/imgKostDetail"
            android:layout_width="411dp"
            android:layout_height="245dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="59dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:layout_constraintEnd_toEndOf="@+id/txtFasilitasDetail"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnMap"
            app:layout_constraintTop_toBottomOf="@+id/txtFasilitasDetail" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_male_24"
            app:layout_constraintEnd_toStartOf="@+id/txtGenderDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceDetail" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toStartOf="@+id/txtAlamatDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtRegionDetail" />

        <TextView
            android:id="@+id/txtKostDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kost Apik Ubaya Si Mbok"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRatingDetail" />

        <TextView
            android:id="@+id/txtGenderDetail"
            android:layout_width="221dp"
            android:layout_height="26dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="12dp"
            android:text="Kost Khusus : Gender"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceDetail" />

        <TextView
            android:id="@+id/txtRegionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Region : Rungkut"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/txtGenderDetail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtGenderDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtGenderDetail" />

        <TextView
            android:id="@+id/txtPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rp. 2,000,000 / thn "
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/txtKostDetailName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtKostDetailName"
            app:layout_constraintTop_toBottomOf="@+id/txtKostDetailName" />

        <TextView
            android:id="@+id/txtRatingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Rating : 4.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgKostDetail" />

        <TextView
            android:id="@+id/txtAlamatDetail"
            android:layout_width="321dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:text="Alamat : Jalan Rungkut Mejoyo Utara"
            app:layout_constraintEnd_toEndOf="@+id/txtRegionDetail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtRegionDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtRegionDetail" />

        <TextView
            android:id="@+id/txtFasilitasDetail"
            android:layout_width="320dp"
            android:layout_height="87dp"
            android:layout_marginTop="12dp"
            android:text="Fasilitas"
            app:layout_constraintEnd_toEndOf="@+id/txtAlamatDetail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtAlamatDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtAlamatDetail" />

        <Button
            android:id="@+id/btnMap"
            android:layout_width="296dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Open Map"
            app:layout_constraintEnd_toEndOf="@+id/txtFasilitasDetail"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtFasilitasDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>